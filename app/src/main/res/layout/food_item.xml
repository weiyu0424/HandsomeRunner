<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/bg_food_item">

        <ImageView
            android:id="@+id/iv_food_thumb"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/iv_food_thumb"
            android:text="foodName"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_fat_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_food_name"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/iv_food_thumb"
            android:text="fat description"
            android:textColor="#aa000000" />

        <TextView
            android:id="@+id/tv_calories_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_food_name"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:text="fat description"
            android:textColor="#aa000000" />
    </RelativeLayout>
</LinearLayout>